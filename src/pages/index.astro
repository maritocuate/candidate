---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Stats from '../components/Stats.astro';
import GetInvolved from '../components/GetInvolved.astro';
---

<Layout 
  title="Marcelo Peretta | Doctor, Sindicalista y Político Comprometido" 
  description="Marcelo Peretta es un doctor, sindicalista y político comprometido con el bienestar de la comunidad. Únete a nuestro movimiento para construir un futuro mejor para todos."
>
  <main>
    <Hero />
    <Stats />
    <GetInvolved />
  </main>
  <footer class="bg-gray-900 text-white py-8">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8">
        <div>
          <h3 class="text-xl font-bold mb-4">Marcelo Peretta</h3>
          <p class="text-gray-400">Doctor, sindicalista y político comprometido con el bienestar de la comunidad.</p>
        </div>
        <div>
          <h3 class="text-xl font-bold mb-4">Contacto</h3>
          <p class="text-gray-400">Email: info@marceloperetta.com</p>
          <p class="text-gray-400">Teléfono: (123) 456-7890</p>
        </div>
        <div>
          <h3 class="text-xl font-bold mb-4">Síguenos</h3>
          <div class="flex gap-4">
            <a href="#" class="text-gray-400 hover:text-white">Facebook</a>
            <a href="#" class="text-gray-400 hover:text-white">Twitter</a>
            <a href="#" class="text-gray-400 hover:text-white">Instagram</a>
          </div>
        </div>
      </div>
      <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-500">
        <p>&copy; {new Date().getFullYear()} Campaña de Marcelo Peretta. Todos los derechos reservados.</p>
      </div>
    </div>
  </footer>
</Layout>