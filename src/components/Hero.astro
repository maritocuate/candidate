---
import Navbar from './Navbar.astro';
---

<section class="bg-[#2B3990] h-screen flex flex-col overflow-hidden" aria-label="Sección principal">
  <div class="pt-4">
    <Navbar />
  </div>
  <div class="container mx-auto px-4 flex-grow flex items-center">
    <div class="absolute bottom-0 opacity-25 w-[200%] left-[-380px] md:w-4/6 md:left-1/2 md:translate-x-[-50%]">
      <img src="/congreso.png" alt="congreso" class="w-full" />
    </div>

    <div class="grid md:grid-cols-2 gap-8 items-center w-full relative">
      <div class="text-white">
        <h1 class="text-8xl font-bold mb-4" id="main-heading">
          MARCELO<br /><span class="bg-white text-[#2B3990] px-3">PERETTA</span>
        </h1>
        <p class="text-gray-300 mb-8">
          Doctor. Sindicalista. Político.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="#estadisticas" class="smooth-scroll bg-red-500 text-white px-6 py-3 rounded-lg font-medium hover:bg-red-600 transition-colors" role="button">
            Sobre mí
          </a>
          <a href="#donate" class="bg-white text-[#2B3990] px-6 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors smooth-scroll" role="button">
            Donar
          </a>
          <a href="#join" class="border-2 border-white text-white px-6 py-3 rounded-lg font-medium hover:bg-white/10 transition-colors smooth-scroll" role="button">
            Únete a nuestra comunidad
          </a>
        </div>
      </div>
      <div class="relative">
        <img
        src="/politician.png"
        alt="Marcelo Peretta - Candidato Político"
        class="relative z-10 max-w-full"
        width="500"
        height="600"
        loading="eager"
        />
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const smoothScrollLinks = document.querySelectorAll<HTMLAnchorElement>('.smooth-scroll');
    
    smoothScrollLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        
        const targetId = link.getAttribute('href');
        if (!targetId) return;
        
        const targetElement = document.querySelector<HTMLElement>(targetId);
        
        if (targetElement) {
          // Scroll suave hasta el elemento
          targetElement.scrollIntoView({ 
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  });
</script>