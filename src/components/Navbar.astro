---
const navItems = [
  { label: 'Inicio', href: '#' },
  { label: 'Sobre mí', href: '#about' },
  { label: 'Estadísticas', href: '#estadisticas' },
  { label: 'Participa', href: '#participa' },
  { label: 'Contacto', href: '#contacto' },
];
---

<header class="w-full z-50 py-4 bg-transparent">
  <nav class="container mx-auto px-4" aria-label="Navegación principal">
    <div class="flex justify-between items-center">
      <div class="flex items-center gap-2">
        <a href="/" aria-label="Inicio" class="text-white">
          <span class="flex items-center gap-0.5 font-bold text-xl"><span>M</span><span class="bg-white text-[#2B3990] p-0.5">P</span></span>
        </a>
      </div>
      
      <div class="hidden md:flex items-center gap-8">
        {navItems.map(item => (
          <a href={item.href} class="text-white hover:text-gray-200">{item.label}</a>
        ))}
      </div>
      
      <div class="flex items-center gap-4">
        <a href="#join" class="bg-white text-[#2B3990] px-4 py-2 rounded-lg hover:bg-gray-100 transition-colors" role="button">Únete a nuestra comunidad</a>
        <a href="#donate" class="border-2 border-white text-white px-4 py-2 rounded-lg hover:bg-white/10 transition-colors" role="button">Donar</a>
      </div>
    </div>
  </nav>
</header>